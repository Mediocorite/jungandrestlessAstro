---
import { Debug } from "astro:components";
import BaseLayout from "./BaseLayout.astro";
// const { frotmatter } = Astro.props;
const { entry } = Astro.props;
---

<BaseLayout pageTitle={entry.data.title}>
  <Debug entry.data />
  <div class="relative">
    <!-- Hero Section -->
    <div
      class="relative h-[70vh] bg-cover bg-center"
      style=`background-image: url(${entry.heroImage});`
    >
      <div
        class="absolute inset-0 bg-black bg-opacity-40 flex flex-col justify-center items-center text-center p-4"
      >
        <h1 class="text-white text-4xl md:text-6xl font-bold mb-2">
          Your Blog Post Title
        </h1>
        <p class="text-white text-lg md:text-xl">Posted on August 15, 2024</p>
      </div>
    </div>

    <!-- Content Section -->
    <div class="relative -mt-12 md:-mt-16 z-10">
      <div class="bg-white shadow-lg rounded-lg p-6 md:p-10">
        <p class="text-lg md:text-xl leading-relaxed">
          Your blog content goes here. Lorem ipsum dolor sit amet, consectetur
          adipiscing elit. Proin auctor, nisi a scelerisque gravida, urna turpis
          bibendum ipsum, id cursus massa ligula id justo...
        </p>
        <!-- Add more content as needed -->
      </div>
    </div>
  </div>

  <slot />
</BaseLayout>
